# Environment Variables Template
# Copy this file to .env and customize for your deployment

# ===========================
# WEBAPP CONFIGURATION
# ===========================

# Streamlit Server Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=200

# ===========================
# BACKEND CONFIGURATION
# ===========================

# FastAPI Server Settings
API_HOST=0.0.0.0
API_PORT=8000

# ===========================
# PYTHON CONFIGURATION
# ===========================

# Python Environment
PYTHONUNBUFFERED=1
PYTHONPATH=/app

# ===========================
# MODEL CONFIGURATION
# ===========================

# Default model to load
DEFAULT_MODEL=ultra_model_all_phases_20251004_140336.joblib

# Model directory (relative to project root)
MODEL_DIR=models/catalog_models

# ===========================
# DATA CONFIGURATION
# ===========================

# Data directories
DATA_DIR=data
CATALOG_DIR=data/catalogs
PROCESSED_DIR=data/processed
RAW_DIR=data/raw

# ===========================
# LOGGING
# ===========================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log directory
LOG_DIR=logs

# ===========================
# OPTIONAL: NASA API
# ===========================

# NASA Exoplanet Archive TAP Service
NASA_TAP_URL=https://exoplanetarchive.ipac.caltech.edu/TAP/sync

# Download timeout (seconds)
NASA_DOWNLOAD_TIMEOUT=300

# ===========================
# OPTIONAL: PERFORMANCE
# ===========================

# Number of worker processes (for production)
WORKERS=4

# Memory limit (for Docker)
MEMORY_LIMIT=4g

# CPU limit (for Docker)
CPU_LIMIT=2
